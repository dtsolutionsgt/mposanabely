<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Img_view_list" >

    <TextView
        android:id="@+id/lblETipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1B76B9" />

    <TextView
        android:id="@+id/lblCant"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:text="999"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1B76B9"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblPNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_toLeftOf="@+id/lblFecha"
        android:gravity="right"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:text="99,999.99"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lblCFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/lblETipo"
        android:minWidth="80dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1B76B9"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:text="99.99"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1B76B9"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lblTot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="99,999.99"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1B76B9"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblPeso"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCant"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:text="999"
        android:textColor="#1B76B9"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>