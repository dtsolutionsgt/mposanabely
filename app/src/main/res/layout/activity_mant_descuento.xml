        <EditText
            android:id="@+id/txt"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/textView2"
